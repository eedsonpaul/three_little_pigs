//*****floating menu *inspired by tumblr :D*
//*************************************************

%div.code#nav
  %ul
    %li
      %a.top{:href => "#top" }
        %img{:src => "/images/buttons/top.png" }

//*****tables for each user
//**************************
-milestone = 1
%table
  %thead
    %tr.span.bold.ui-widget-header
      %td TABLE HEADER.
      
  %tbody
    %tr
      %table
        %thead
          %tr.bold
            %td.cell
              WEEK
              = milestone

        %tbody.ui-widget-content
          %tr
            - session[:token] = session[:user].token
            - return_val = Login.labelled(session[:token])
            - @labels = return_val[1]
            - @project_xmls = return_val[0]
            - @labels.each do |label|
              %td.valign
                %p.ui-widget-header
                  = label

                %table.cell
                  %tbody
                    - @project_xmls.each do |x|
                      %tr
                        %td.ui-dialog-titlebar
                          = x.at('name').innerHTML
                        - project_id = x.at('id').innerHTML
                        - story_uri = URI.parse("#{@base_url}/#{project_id}/stories")
                        - story_doc = Login.net_http(story_uri, session[:token], 'stories')
                        - (story_doc/'story').each do |s|
                          - if s.innerHTML != nil
                            - if s.at('story_type').innerHTML != "release"
                              - if s.at('labels')
                                - if s.at('labels').innerHTML == label
                                  %tr
                                    %td
                                      %ul.sortable.ui-sortable
                                        %li.ui-state-default
                                          %span.ui-icon ui-icon-arrowthick-2-n-s
                                          = s.at('name').innerHTML
                              - else 
                                - if label == "Other Activities"
                                  %tr
                                    %td
                                      %ul.sortable.ui-sortable
                                        %li.ui-state-default
                                          %span.ui-icon ui-icon-arrowthick-2-n-s
                                          = s.at('name').innerHTML= s.at('name').innerHTML
                            - else 
                              - break  
          - milestone += 1
        %td
          WEEK 
          = milestone            
              
:javascript
  $(document).ready(function(){
    $(".sortable").sortable();

  });
