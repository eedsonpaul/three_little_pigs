%head
  %title percolait tracker
  = render :partial => 'layouts/includes'

#body
  - if session[:user]
    #head-board
      %p
        Put your mind on Percolait. Welcome,
        - @user = User.find(session[:user])
        = @user.screen_name + '.'
        = link_to "| dashboard |", dash_path
        = link_to "| actions |", '#'
        = link_to "| account |", '#'
        = link_to "| settings |", '#'
        = link_to "| help |", '#'
        = link_to "| log-out |", logout_path

  #page
    - if session[:user]
      #header2
        .headerPadding
          %h1.code#head_image
            %span.fake-hover
            = link_to 'home', root_url
        %div.clearBoth

    - else
      #header
        .headerPadding
          %h1.code#head_image
            %span.fake-hover
            = link_to 'home', root_url
        %div.clearBoth


    #midpage
      - if session[:user].nil?
        #wrapper
          #content
            .contentPadding
              #page_effect
                = yield
        #side
          .sidePadding
            = render :partial => 'homepage/sidebar'

      - else
        #wrapper
          #content2
            .contentPadding
              #page_effect
                = yield
        
      %div.clearBoth

  .hide
    #footer
      %center
        %p this is the footer
