= stylesheet_link_tag 'compiled', 'jquery.ui.all'
= javascript_include_tag 'jquery-1.3.2.min', 'jquery-1.4.2.js', 'sliding_effect'

:javascript
  var Header = {
   addFade : function(selector){
    $('span.fake-hover> span').css("display", "none").prependTo($(selector));
    $(selector+" a").bind("mouseenter",function(){
      $(selector+" .fake-hover").fadeIn("slow");
    });
    $(selector+" a").bind("mouseleave",function(){
      $(selector+" .fake-hover").fadeOut("slow");
      });
    }
  };
  
  $(document).ready(function() {
      $('img').each(function() {
          $(this).hover(function() {
              $(this).stop().animate({ opacity: 1.0 }, 500);
          },
         function() {
             $(this).stop().animate({ opacity: 0.5 }, 500);
         });
      });
  });


:javascript
  $(document).ready(function(){
    $(document).ready(function () {
      $('#page_effect').fadeIn(1500);
    });

    $(function(){
      Header.addFade("#head_image");
    });
  });
